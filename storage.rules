rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // Profile pictures - users can read any, but only write their own
    match /profiles/{userId}/{fileName} {
      allow read: if true;
      allow write: if request.auth != null && request.auth.uid == userId
                   && request.resource.size < 5 * 1024 * 1024  // Max 5MB
                   && request.resource.contentType.matches('image/.*');
      allow delete: if request.auth != null && request.auth.uid == userId;
    }
    
    // Profile videos - same rules but larger size limit
    match /profiles/{userId}/videos/{fileName} {
      allow read: if true;
      allow write: if request.auth != null && request.auth.uid == userId
                   && request.resource.size < 50 * 1024 * 1024  // Max 50MB
                   && request.resource.contentType.matches('video/.*');
      allow delete: if request.auth != null && request.auth.uid == userId;
    }
    
    // Family shared media - all authenticated family members can read/write
    match /family-media/{path=**} {
      allow read: if request.auth != null;
      allow write: if request.auth != null
                   && request.resource.size < 10 * 1024 * 1024;  // Max 10MB
    }
    
    // Timeline photos - authenticated users can upload
    match /timeline-photos/{eventId}/{fileName} {
      allow read: if true;
      allow write: if request.auth != null
                   && request.resource.size < 10 * 1024 * 1024
                   && request.resource.contentType.matches('image/.*');
    }
  }
}
